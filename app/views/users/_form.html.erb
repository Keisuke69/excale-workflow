<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :user %>
    <%= f.text_field :user %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :role %>
    <%= select  :user,:role, {"申請者" => "0", "承認者" => "1"} %>
  </div>
  <div>
    <%= f.label :removed %>
    <%= select :user,:removed, {"アクティブ" => "0", "非アクティブ" => "1"} %>
  </div>
  <div>
    <%= f.submit :class => "btn btn-large" %>
  </div>
<% end %>
